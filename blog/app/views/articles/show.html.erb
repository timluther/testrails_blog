<p>
  <H2>Title:</H2>
  <div class="ArticleText">
  	<%= @article.title %>
  </div>
</p>
 
<p>
  <H3>Text:</H3>
  <div class="ArticleText">
  <%= @article.text %>
  </div>
</p>
 
<% if @article.comments.size > 0 %>
	<h3>Comments</h3>
	<div class="ArticleText">
	<%= render @article.comments %>
	</div>
<% end %>
 
<h3>Add a comment:</h3>
<div class="Form">
<%= render "comments/form" %>
</div>
 
<%= link_to 'Edit Article', edit_article_path(@article) %> |
<%= link_to 'Back to Articles', articles_path %>